<h1>Store Catalog</h1>





<% @products.each do |product| %>
  <table class="table table-borderd">
    <tr>
      <td><%= image_tag product.image_url(:thumb).to_s %></td>

      <td><h3><%= product.title %></h3></td>
    </tr>
    <tr>
      <td><%= sanitize(product.description) %></td>
    </tr>
    <tr>
    
<!-- START:currency -->
     <td><%= number_to_currency(product.price) %></td>
          
<!-- END:currency -->
    <td><%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %></td>
    <% if session[:user_id] %>
    	<td><%= button_to 'edit', edit_product_path(product), :method => 'get', :class => "btn btn-warning"  %></td>
    <% end %>
      </tr>
        <% if product.reviews  %>
        <% product.reviews.each do |review| %>
     <tr><th class="text-info">Reviews</th>
      <th class="text-info">Rating <%= review.rating %></th>

      </tr>
    
      <tr>
      
        <td><%= review.rating  %></td>
        <td><%= review.comment  %></td>
      </tr>
     <% end %>
       <td><%= button_to 'new review', new_product_review_path(product), :method => 'get' %></td>
      <td></td>
        <% end %>
    </tr>
    <tr>

    </tr>
</table>
 
<% end %>
 
