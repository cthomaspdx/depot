<h3 class='text-info'> Hover over Items to see what they can do for you!<h3>
<h1>Store Catalog</h1>





<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag product.image_url(:thumb).to_s %>
    <h3><%= product.title %></h3>
    <p><%= sanitize(product.description) %></p>
    <div class="price_line">
<!-- START:currency -->
      <span class="price"><%= number_to_currency(product.price) %></span>
<!-- END:currency -->
    <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
    <% if session[:user_id] %>
    	<%= button_to 'edit', edit_product_path(product), :method => 'get', :class => "btn btn-warning"  %>
    <% end %>
    </div>
  </div>
  
<% end %>
