<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to 'Show', user, :Class => "btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-inverse" %></td>
  </tr>
<% end %>
</table>

